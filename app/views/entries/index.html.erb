<%= form_for(entries_path, method: :get) do |form| %>
  <p><%= form.label("search") %></p>
  <p><%= form.text_field("search") %></p>
  <p><%= form.submit("search") %></p>
<% end %>


<% for entry in @entries %>
    <h2><%= link_to(entry.title, entry_path(entry)) %></h2>
        <p><%= entry.date %></p>
        <p>Author: <%= entry.author %></p>
        <p><%= entry.contents %></p>
  <% end %>

<% if @search_params.present? %>
<%= link_to("Back to all entries", entries_path) %>
<% end %>

<%= link_to("New entry", new_entry_path) %>
